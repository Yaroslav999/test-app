%p= link_to 'Back', companies_path, class: 'btn btn-info'

= form_for current_user, class: 'form-group' do |f|
  .field.form-group
    = f.label :first_name, class: 'col-form-label'
    = f.text_field :first_name, class: 'form-text form-control'

  .field.form-group
    = f.label :last_name, class: 'col-form-label'
    = f.text_field :last_name, class: 'form-text form-control'

  .field.form-group
    = f.label :email, class: 'col-form-label'
    = f.text_field :email, class: 'form-text form-control'

  .actions
    = f.submit 'Save', class: 'btn btn-primary'

